<?xml version="1.0" encoding="utf-8"?>
<!--최상위-->
<LinearLayout android:id="@+id/main_icon"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <!--전체 아이콘-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <!--반려동물 특징-->
            <LinearLayout
                android:id="@+id/pet_Characteristic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="90dp"
                    android:elevation="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:src="@drawable/main_icon_pets"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="반려동물\n특징"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
            <!--반려동물 특징 끝-->

            <!--운동기록-->
            <LinearLayout
                android:id="@+id/fitness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="100"
                android:layout_marginHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="90dp"
                    android:elevation="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:src="@drawable/main_icon_walk"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운동기록"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
            <!--운동기록 끝-->
            <!--검진기록-->
            <LinearLayout
                android:id="@+id/check_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="100"
                android:layout_marginHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="90dp"
                    android:elevation="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:src="@drawable/main_icon_check"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="검진기록"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
            <!--검진기록-->
            <!--가까운 동물병원-->
                <LinearLayout
                    android:id="@+id/hospital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="100"
                    android:layout_marginHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="90dp"
                        android:elevation="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="10dp"
                            android:src="@drawable/main_icon_hospital"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가까운\n동물병원"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#000000"/>
                </LinearLayout><!--가까운 동물병원 끝-->
            <!--전문가 QnA
            <LinearLayout
                android:id="@+id/qna"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="100"
                android:layout_margin="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="90dp"
                    android:elevation="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:src="@drawable/main_icon_doctor"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전문가\nQnA"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>전문가 QnA 끝-->
        </LinearLayout><!--전체 아이콘 끝-->
</LinearLayout><!--최상위-->