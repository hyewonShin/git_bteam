<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mypage.MyDeleteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:textAppearance="@style/Widget.AppCompat.Toolbar"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="131dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:text="정말로 탈퇴 하시겠습니까?\n모든 회원정보가 삭제됩니다.\n동의하신다면 닉네임을 입력해주세요."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myDelChkEt"
        android:layout_width="359dp"
        android:layout_height="72dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/myDelChkBtn"
        android:layout_width="356dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="#cc0000"
        android:text="회원탈퇴"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myDelChkEt" />

    <Button
        android:id="@+id/myDelCancle"
        android:layout_width="356dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:text="취소"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myDelChkBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>